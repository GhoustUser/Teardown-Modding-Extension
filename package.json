{
	"name": "teardown-modding-extension",
	"displayName": "Teardown Modding Extension",
	"description": "Adds intellisense for Teardown's scripting API.",
	"author": {
		"name": "GhoustUser",
		"url": "https://github.com/GhoustUser"
	},
	"version": "0.4.2",
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"package": "vsce package"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/GhoustUser/Teardown-Modding-Extension"
	},
	"keywords": [
		"teardown",
		"modding",
		"lua",
		"api"
	],
	"icon": "./icon.png",
	"engines": {
		"vscode": "^1.108.1"
	},
	"activationEvents": [
		"workspaceContains:info.txt"
	],
	"contributes": {
		"configuration": {
			"title": "Teardown Modding Extension",
			"properties": {
				"teardownModding.enableScriptingAPI": {
					"type": "boolean",
					"default": false,
					"description": "Whether to enable Lua scripting API references for Teardown modding. (workspace only)"
				},
				"teardownModding.showPrompt": {
					"type": "boolean",
					"default": true,
					"description": "Used to track if the user has already seen the prompt to enable the scripting API. (workspace only)"
				}
			}
		}
	},
	"devDependencies": {
		"@types/node": "^25.0.8",
		"@types/vscode": "^1.108.1"
	}
}
