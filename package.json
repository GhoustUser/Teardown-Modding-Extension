{
	"name": "teardown-lua-api",
	"displayName": "Teardown lua API",
	"description": "Adds Teardown's Lua API to the Lua language server for better autocompletion and documentation support.",
	"author": {
		"name": "GhoustUser",
		"url": "https://github.com/GhoustUser"
	},
	"version": "0.2",
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"package": "vsce package"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/GhoustUser/Teardown-Modding-Extension"
	},
	"keywords": [
		"teardown",
		"modding",
		"lua",
		"api"
	],
	"icon": "./icon.png",
	"engines": {
		"vscode": "^1.108.1"
	},
	"activationEvents": [
		"workspaceContains:info.txt"
	],
	"contributes": {
		"configuration": {
			"title": "Teardown Modding Extension configuration",
			"properties": {
				"teardownModding.openModViewByDefault": {
					"type": "boolean",
					"default": false,
					"description": "Whether to open the Mod View automatically when the extension is activated."
				}
			}
		},
		"commands": [
			{
				"command": "teardownModding.openModView",
				"title": "Open Teardown Mod View"
			}
		]
	},
	"devDependencies": {
		"@types/node": "^25.0.8",
		"@types/vscode": "^1.108.1"
	}
}
